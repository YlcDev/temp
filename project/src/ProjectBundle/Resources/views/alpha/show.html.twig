{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alpha</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alpha.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ alpha.name }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ alpha.street }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ alpha.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ alpha.city }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alpha_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('alpha_edit', { 'id': alpha.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
